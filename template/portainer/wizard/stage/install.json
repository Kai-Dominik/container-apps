{
  "api_version": "v1",
  "title": "{{PORTAINER_NAME}}",
  "wizard": [
    {
      "title": "{{PORTAINER_CONFIGURE}}",
      "schema": {
        "http_port": {
          "type": "integer",
          "title": "HTTP Port",
          "description": "{{PORTAINER_WEB_HOST_PORT_DESC}}",
		  "required": true
        },
        "container_name": {
          "type": "string",
          "title": "Containner Name",
          "description": "{{PORTAINER_NAME_DESC}}",
		  "required": true
        },
        "admin_passpwd_hash": {
          "type": "string",
          "title": "Admin hashed password",
          "description": "{{PORTAINER_HASHED_PASSWD_DESC}}",
		   "required": true
        }
      },
      "form": [
        "*"
      ]
    }
  ],
  "binding": {
    "type": "yaml",
    "file": "docker-compose.yml.tpl",
    "data": {
      "http_port": ["portainer.ports[0]"],
      "container_name": ["portainer.container_name"],
      "admin_passpwd_hash": ["portainer.environment.admin_passpwd_hash"]
    },
    "template": ["\\*.tpl"]
  }
}

        
        